<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="utils.signInController">
    <children>
        <!-- Background image -->
        <ImageView fx:id="bgImage" fitWidth="400" fitHeight="300" pickOnBounds="true" preserveRatio="false" />

        <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50"
              AnchorPane.rightAnchor="50">
            <Label text="Bienvenue ManageX" style="-fx-font-size:18px; -fx-text-fill: white;" />
            <TextField fx:id="tfUsername" promptText="Nom d'utilisateur"/>
            <PasswordField fx:id="pfPassword" promptText="Mot de passe"/>
            <Button text="Se connecter" onAction="#handleLogin"/>
            <Label fx:id="lblMessage" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
