<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.tachesController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../styles/taches.css">

    <!-- Header avec gradient -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header"
          prefHeight="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER" spacing="10" styleClass="logo-container">
            <padding>
                <Insets left="20"/>
            </padding>
            <ImageView fitHeight="80" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@../icons/ManageX.png"/>
                </image>
            </ImageView>
            <Label text="ManageX" styleClass="logo-text">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
        </HBox>

        <!-- Menu au centre -->
        <HBox alignment="CENTER" spacing="30" HBox.hgrow="ALWAYS">
            <Button fx:id="btnHome" text="Home" styleClass="menu-button"
                    onAction="#handleHomeClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="btnProjets" text="Projets" styleClass="menu-button"
                    onAction="#handleProjetsClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="btnTaches" text="Tâches" styleClass="menu-button, active"
                    onAction="#handleTachesClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Profile à droite -->
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="profile-container">
            <padding>
                <Insets right="20"/>
            </padding>
            <Label fx:id="lblUsername" text="Utilisateur" styleClass="username-label">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Circle fx:id="profileCircle" radius="20" styleClass="profile-circle"/>
        </HBox>
    </HBox>

    <!-- Contenu principal -->
    <VBox spacing="20" styleClass="content-container"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="20.0">

        <!-- Barre d'outils -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="toolbar">
            <Label text="Mes Tâches" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Filtres de priorité -->
            <ComboBox fx:id="cboPriorite" promptText="Priorité"
                      styleClass="filter-combo" prefWidth="130">
            </ComboBox>

            <!-- Filtres de projet -->
            <ComboBox fx:id="cboProjet" promptText="Tous les projets"
                      styleClass="filter-combo" prefWidth="160">
            </ComboBox>

            <!-- Bouton ajouter tâche -->
            <Button fx:id="btnAddTask" text="+ Nouvelle Tâche"
                    styleClass="btn-add-task"
                    onAction="#handleAddTask">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Statistiques rapides -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <VBox alignment="CENTER" spacing="5" styleClass="quick-stat">
                <Label text="À faire" styleClass="stat-label-small">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Label fx:id="lblTodoCount" text="5" styleClass="stat-value-small stat-todo">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
            </VBox>

            <VBox alignment="CENTER" spacing="5" styleClass="quick-stat">
                <Label text="En cours" styleClass="stat-label-small">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Label fx:id="lblInProgressCount" text="7" styleClass="stat-value-small stat-progress">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
            </VBox>

            <VBox alignment="CENTER" spacing="5" styleClass="quick-stat">
                <Label text="Terminées" styleClass="stat-label-small">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Label fx:id="lblCompletedCount" text="12" styleClass="stat-value-small stat-completed">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
            </VBox>
        </HBox>

        <!-- Onglets de statut -->
        <HBox spacing="10" styleClass="tabs-container">
            <Button text="Toutes" styleClass="tab-btn, tab-active" onAction="#showAllTasks">
                <font>
                    <Font size="13.0"/>
                </font>
            </Button>
            <Button text="À faire" styleClass="tab-btn" onAction="#showTodoTasks">
                <font>
                    <Font size="13.0"/>
                </font>
            </Button>
            <Button text="En cours" styleClass="tab-btn" onAction="#showInProgressTasks">
                <font>
                    <Font size="13.0"/>
                </font>
            </Button>
            <Button text="Terminées" styleClass="tab-btn" onAction="#showCompletedTasks">
                <font>
                    <Font size="13.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Liste des tâches -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="tasks-scroll">
            <VBox fx:id="vboxTasks" spacing="12" styleClass="tasks-list">
                <padding>
                    <Insets top="5" bottom="5"/>
                </padding>
            </VBox>
        </ScrollPane>
    </VBox>

</AnchorPane>