<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.JoinProjectController"
      spacing="20" prefWidth="450" styleClass="window-border"
      stylesheets="@../styles/addProject.css" style="-fx-padding: 30;">

    <VBox fx:id="paneSearch" spacing="15" alignment="CENTER">
        <Label text="Rejoindre un projet" styleClass="header-title" style="-fx-font-size: 20;"/>
        <Label text="Saisissez le code à 6 chiffres pour rejoindre l'équipe" styleClass="header-subtitle"/>
        <TextField fx:id="txtJoinCode" promptText="000000" styleClass="form-input"
                   style="-fx-alignment: center; -fx-font-size: 24; -fx-font-family: 'Consolas';"/>
        <Label fx:id="lblError" text="Projet introuvable" visible="false" style="-fx-text-fill: #ef4444;"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Annuler" onAction="#handleClose" styleClass="btn-cancel"/>
            <Button text="Vérifier le code" onAction="#handleVerify" styleClass="btn-save"/>
        </HBox>
    </VBox>

    <VBox fx:id="panePreview" visible="false" managed="false" spacing="15" style="-fx-background-color: #f8fafc; -fx-padding: 20; -fx-background-radius: 15;">
        <Label fx:id="lblProjectName" text="Nom du Projet" style="-fx-font-weight: bold; -fx-font-size: 18;"/>
        <Label fx:id="lblProjectDesc" text="Description..." wrapText="true" style="-fx-text-fill: #64748b;"/>
        <Separator/>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Retour" onAction="#handleBack" styleClass="btn-cancel"/>
            <Button fx:id="btnJoin" text="Rejoindre maintenant" onAction="#handleJoin" styleClass="btn-save"/>
        </HBox>
    </VBox>
</VBox>
