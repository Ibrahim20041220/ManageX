<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="4" xmlns:fx="http://javafx.com/fxml"
    fx:controller="controllers.OverviewController" stylesheets="@../styles/profile.css"
>   
    
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>


    <HBox> 
        <Label fx:id="OverviewLabel" styleClass="OverviewLabel" text="Overview" />

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="editOverview" styleClass="editOverview" text="Edit overview">

            <graphic>

                <ImageView fx:id="editOverviewIcon" fitHeight="16" fitWidth="16"/>

            </graphic>

        </Button>
    </HBox>

    <Label fx:id="overview" />

</VBox>