<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>


<VBox fx:id="popupRoot"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ProfilePopupController"
      spacing="10"
      stylesheets="@../../styles/ProfilePopup.css"
      styleClass="popup-box"
      >
    <padding>
      <Insets top="8" bottom="8" left="8" right="8" />
    </padding>

    <HBox spacing="4" alignment="CENTER" styleClass="popup-btn">
      <ImageView fx:id="profileIcon" fitWidth="35" fitHeight="35" />
      <Button fx:id="btnProfile" onAction="#handleProfile"  text="Profil" />
    </HBox>
    <HBox spacing="4" alignment="CENTER" styleClass="popup-btn logout-btn">
      <ImageView fx:id="logoutIcon" fitWidth="25" fitHeight="25" />
      <Button fx:id="btnLogout" text="logout" />
    </HBox>

</VBox>
