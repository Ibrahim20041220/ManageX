<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15"
      stylesheets="@/styles/ProjectCard.css"
      styleClass="card" 

>

    <!-- Ligne du titre + bouton actif -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label styleClass="icon-phone" /> <!-- icône téléphone -->
        <VBox>
            <Label text="Application Mobile" styleClass="title"/>
            <Label text="E-commerce" styleClass="subtitle"/>
        </VBox>

        <Label text="Actif" styleClass="btn-active" />
    </HBox>

    <!-- Ligne dates -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="dates-row">
        <Label text=" Début : 01/03/2023 | Fin prevue : 30/09/2023" styleClass="dates-text"/>
    </HBox>

    <!-- Barre de progression -->
    <StackPane styleClass="progress-bar-bg" prefHeight="40" maxWidth="300" minWidth="300" alignment="CENTER">
        <Rectangle styleClass="progress-bar-fill" width="225" height="40" />
        <Label text="75%" styleClass="progress-label" />
    </StackPane>

</VBox>