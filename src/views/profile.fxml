<?import javafx.scene.layout.VBox?>


<VBox spacing="20" xmlns:fx="http://javafx.com/fxml"
        fx:controller="controllers.profileController" stylesheets="@../styles/profile.css">

    <padding>
        <Insets top="5" left="5" right="5" bottom="5" />
    </padding>

    <!-- carte  profile -->
    <StackPane >
        <HBox fx:id="viewMode" alignment="TOP_LEFT" spacing="20" styleClass="profile-card" >
            
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>

            <StackPane fx:id="avatarStackPane" styleClass="avatar-container" minWidth="80" minHeight="80" maxWidth="80" maxHeight="80">
                <ImageView fx:id="avatarImage" fitHeight="70" fitWidth="70"/>

                <StackPane styleClass="camera-wrapper" minWidth="25" minHeight="25" maxWidth="25" maxHeight="25" StackPane.alignment="BOTTOM_RIGHT">
                    <ImageView fx:id="cameraImage" fitHeight="15" fitWidth="15" styleClass="camera-icon" />
                </StackPane>
            </StackPane>
            

            <VBox spacing="8" styleClass="info-container">
                <Label fx:id="name" styleClass="user-name"/>
                
                <Label fx:id="profession" styleClass="user-role" />

                <HBox alignment="CENTER_LEFT" spacing="5">
                    <ImageView fx:id="mapImage" fitHeight="16" fitWidth="16"/>
                    <Label fx:id="localisation" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="5">
                    <ImageView fx:id="emailImage" fitHeight="16" fitWidth="16"/>
                    <Label fx:id="email" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="5">
                    <ImageView fx:id="phoneImage" fitHeight="16" fitWidth="16"/>
                    <Label fx:id="phone" />
                </HBox>

            </VBox>

            <!-- "Spacer" pour pousser le bouton suivant tout à droite -->
            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="editButton"  styleClass="editButton" text="Edit Profile">
                <graphic>
                    <ImageView fx:id="editImage" fitHeight="16" fitWidth="16"/>
                </graphic>
            </Button>

        </HBox>

        <!-- mode edition -->
        
        <HBox  fx:id="editMode" alignment="TOP_LEFT" spacing="20" styleClass="profile-card-edit" visible="false" managed="false">

            <padding>
                <Insets bottom="15" left="15" right="15" top="15"/>
            </padding>

            <StackPane styleClass="avatar-container-edit" minWidth="80" minHeight="80">
                <ImageView fx:id="avatarImageEdit" fitHeight="75" fitWidth="75" />
                <StackPane styleClass="camera-overlay">
                    <ImageView fx:id="cameraIcon" fitHeight="20" fitWidth="20" />
                </StackPane>
            </StackPane>

            <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="info-container">
                <TextField fx:id="editName" text="Michael Smith" styleClass="edit-field-title" promptText="Nom complet"/>
                <TextField fx:id="editProfession" text="Senior Frontend Developer" styleClass="edit-field-sub" promptText="Profession"/>
                
                <VBox spacing="5" styleClass="contact-edit-group">
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fx:id="mapIcon" fitHeight="14" fitWidth="14" opacity="0.6"/>
                        <TextField fx:id="editLocalisation" text="San Francisco, CA" styleClass="edit-field-contact"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <ImageView fx:id="emailIcon" fitHeight="14" fitWidth="14" opacity="0.6"/>
                        <TextField fx:id="editEmail" text="michael.smith@email.com" styleClass="edit-field-contact"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10" alignment="TOP_RIGHT">
                <Button fx:id="saveButton" text="Sauvegarder" styleClass="btn-save" />
                <Button fx:id="cancelButton" text="Annuler" styleClass="btn-cancel" />
            </VBox>
        </HBox>

    </StackPane>


    <!-- other infos -->
    <VBox spacing="0">

        <HBox spacing="5" styleClass="Switch-Buttons">
            <Button fx:id="OverviewButton" styleClass="ButtonSwitch" text="Overview" />
            <Button fx:id="SkillsButton" styleClass="ButtonSwitch" text="Skills" />
            <Button fx:id="ProjetsButton" styleClass="ButtonSwitch" text="Projets" />
            <Button fx:id="SettingsButton" styleClass="ButtonSwitch" text="Settings" />
        </HBox>

        <StackPane fx:id="scene"/>

    </VBox>


</VBox>

