<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.profileController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../styles/profile.css">

    <!-- Header avec gradient -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header"
          prefHeight="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER" spacing="10" styleClass="logo-container">
            <padding>
                <Insets left="20"/>
            </padding>
            <ImageView fitHeight="80" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@../icons/ManageX.png"/>
                </image>
            </ImageView>
            <Label text="ManageX" styleClass="logo-text">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
        </HBox>

        <!-- Menu au centre -->
        <HBox alignment="CENTER" spacing="30" HBox.hgrow="ALWAYS">
            <Button fx:id="btnHome" text="Home" styleClass="menu-button"
                    onAction="#handleHomeClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="btnProjets" text="Projets" styleClass="menu-button"
                    onAction="#handleProjetsClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="btnTaches" text="Tâches" styleClass="menu-button"
                    onAction="#handleTachesClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Profile à droite -->
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="profile-container">
            <padding>
                <Insets right="20"/>
            </padding>
            <Label fx:id="lblUsername" text="Utilisateur" styleClass="username-label">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Circle fx:id="profileCircle" radius="20" styleClass="profile-circle, active-profile"/>
        </HBox>
    </HBox>

    <!-- Contenu principal -->
    <ScrollPane fitToWidth="true" styleClass="content-scroll"
                AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
                AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="20.0">

        <VBox spacing="25" styleClass="content-container">
            <padding>
                <Insets bottom="20"/>
            </padding>

            <!-- En-tête du profil -->
            <HBox spacing="30" alignment="CENTER_LEFT" styleClass="profile-header">
                <padding>
                    <Insets top="20" bottom="20" left="30" right="30"/>
                </padding>

                <!-- Photo de profil large -->
                <VBox alignment="CENTER" spacing="10">
                    <Circle radius="60" styleClass="profile-photo-large"/>
                    <Button text="Changer la photo" styleClass="btn-change-photo"
                            onAction="#handleChangePhoto">
                        <font>
                            <Font size="11.0"/>
                        </font>
                    </Button>
                </VBox>

                <!-- Informations principales -->
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label fx:id="lblFullName" text="Amine Lamaizi" styleClass="profile-name">
                        <font>
                            <Font name="System Bold" size="28.0"/>
                        </font>
                    </Label>
                    <Label fx:id="lblEmail" text="amine.lamaizi@example.com" styleClass="profile-email">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <Label fx:id="lblRole" text="Chef de Projet" styleClass="profile-role">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Label>
                </VBox>

                <!-- Boutons d'action -->
                <VBox spacing="10">
                    <Button text="Modifier le profil" styleClass="btn-edit-profile"
                            onAction="#handleEditProfile">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                    </Button>
                    <Button text="Se déconnecter" styleClass="btn-logout"
                            onAction="#handleLogout">
                        <font>
                            <Font size="13.0"/>
                        </font>
                    </Button>
                </VBox>
            </HBox>

            <!-- Onglets d'information -->
            <HBox spacing="10" styleClass="tabs-container">
                <Button text="Informations" styleClass="profile-tab, tab-active"
                        onAction="#showInfoTab">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Button text="Activité" styleClass="profile-tab"
                        onAction="#showActivityTab">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <Button text="Paramètres" styleClass="profile-tab"
                        onAction="#showSettingsTab">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
            </HBox>

            <!-- Contenu de l'onglet Informations -->
            <VBox fx:id="vboxInfoTab" spacing="20">
                <!-- Informations personnelles -->
                <VBox spacing="15" styleClass="info-section">
                    <Label text="Informations personnelles" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>

                    <GridPane hgap="20" vgap="15" styleClass="info-grid">
                        <Label text="Nom complet" styleClass="info-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtFullName" text="Amine Lamaizi"
                                   styleClass="info-field" editable="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Email" styleClass="info-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtEmail" text="amine.lamaizi@example.com"
                                   styleClass="info-field" editable="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Téléphone" styleClass="info-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtPhone" text="+212 6 12 34 56 78"
                                   styleClass="info-field" editable="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Département" styleClass="info-label"
                               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtDepartment" text="Développement"
                                   styleClass="info-field" editable="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <columnConstraints>
                            <ColumnConstraints minWidth="150" prefWidth="150"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                    </GridPane>
                </VBox>

                <!-- Statistiques -->
                <VBox spacing="15" styleClass="info-section">
                    <Label text="Statistiques" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>

                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <VBox alignment="CENTER" spacing="5" styleClass="stat-box">
                            <Label text="Projets" styleClass="stat-box-label">
                                <font>
                                    <Font size="12.0"/>
                                </font>
                            </Label>
                            <Label text="5" styleClass="stat-box-value">
                                <font>
                                    <Font name="System Bold" size="24.0"/>
                                </font>
                            </Label>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5" styleClass="stat-box">
                            <Label text="Tâches complétées" styleClass="stat-box-label">
                                <font>
                                    <Font size="12.0"/>
                                </font>
                            </Label>
                            <Label text="42" styleClass="stat-box-value">
                                <font>
                                    <Font name="System Bold" size="24.0"/>
                                </font>
                            </Label>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5" styleClass="stat-box">
                            <Label text="Taux de réussite" styleClass="stat-box-label">
                                <font>
                                    <Font size="12.0"/>
                                </font>
                            </Label>
                            <Label text="94%" styleClass="stat-box-value">
                                <font>
                                    <Font name="System Bold" size="24.0"/>
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>

</AnchorPane>