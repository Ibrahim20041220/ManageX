<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.projetsController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../styles/projets.css">

    <!-- Header avec gradient -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header"
          prefHeight="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER" spacing="10" styleClass="logo-container">
            <padding>
                <Insets left="20"/>
            </padding>
            <ImageView fitHeight="80" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@../icons/ManageX.png"/>
                </image>
            </ImageView>
            <Label text="ManageX" styleClass="logo-text">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
        </HBox>

        <!-- Menu au centre -->
        <HBox alignment="CENTER" spacing="30" HBox.hgrow="ALWAYS">
            <Button fx:id="btnHome" text="Home" styleClass="menu-button"
                    onAction="#handleHomeClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="btnProjets" text="Projets" styleClass="menu-button, active"
                    onAction="#handleProjetsClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button fx:id="btnTaches" text="Tâches" styleClass="menu-button"
                    onAction="#handleTachesClick">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Profile à droite -->
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="profile-container">
            <padding>
                <Insets right="20"/>
            </padding>
            <Label fx:id="lblUsername" text="Utilisateur" styleClass="username-label">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Circle fx:id="profileCircle" radius="20" styleClass="profile-circle"/>
        </HBox>
    </HBox>

    <!-- Contenu principal -->
    <VBox spacing="20" styleClass="content-container"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="20.0">

        <!-- Barre d'outils -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="toolbar">
            <Label text="Mes Projets" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Barre de recherche -->
            <TextField fx:id="txtSearch" promptText="Rechercher un projet..."
                       styleClass="search-field" prefWidth="250">
                <font>
                    <Font size="13.0"/>
                </font>
            </TextField>

            <!-- Bouton ajouter projet -->
            <Button fx:id="btnAddProject" text="+ Nouveau Projet"
                    styleClass="btn-add-project"
                    onAction="#handleAddProject">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Filtres -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="filters-container">
            <Label text="Filtrer par:" styleClass="filter-label">
                <font>
                    <Font size="13.0"/>
                </font>
            </Label>
            <Button text="Tous" styleClass="filter-btn, filter-active" onAction="#filterAll">
                <font>
                    <Font size="12.0"/>
                </font>
            </Button>
            <Button text="En cours" styleClass="filter-btn" onAction="#filterEnCours">
                <font>
                    <Font size="12.0"/>
                </font>
            </Button>
            <Button text="Terminés" styleClass="filter-btn" onAction="#filterTermines">
                <font>
                    <Font size="12.0"/>
                </font>
            </Button>
            <Button text="En pause" styleClass="filter-btn" onAction="#filterEnPause">
                <font>
                    <Font size="12.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Liste des projets -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="projects-scroll">
            <GridPane fx:id="gridProjets" hgap="20" vgap="20" styleClass="projects-grid">
                <padding>
                    <Insets top="10" bottom="10"/>
                </padding>
            </GridPane>
        </ScrollPane>
    </VBox>

</AnchorPane>