<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import utils.FloatingField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<VBox fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.signInController" alignment="CENTER"
            stylesheets="@../styles/signIn.css">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50"
              AnchorPane.rightAnchor="50">
            <ImageView fitWidth="170" fitHeight="170">
                <image>
                    <Image url="@../icons/connexion (2).png" />
                </image>
            </ImageView>
            <Label text="Bienvenue ManageX" style="-fx-font-size:18px; -fx-text-fill: black;" />
            <FloatingField fx:id="Username" labelText="Nom d'utilisateur" />
            <FloatingField fx:id="Password" labelText="Mot de passe" />
            <CheckBox fx:id="rememberMe" text="Remember me" styleClass="rememberMe" />
            <!-- <Button text="Se connecter" onAction="#handleLogin"/> -->
            <HBox alignment="CENTER" spacing="10">
                <Button text="Se connecter" onAction="#handleLogin"/>

                <ImageView fx:id="loadingIcon"
                        fitWidth="20"
                        fitHeight="20"
                        visible="false"
                        managed="false">
                    <image>
                        <Image url="@../icons/hourGlass.png"/>
                    </image>
                </ImageView>
            </HBox>
            <Label fx:id="lblMessage" textFill="white"/>
        </VBox>
    </children>
</VBox>
